# Face Recognition API Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/face_recognition

# Security Configuration
ENCRYPTION_PASSWORD=your-super-secure-encryption-password-here

# Flask Configuration
FLASK_ENV=production
PORT=5000
DEBUG=False

# API Security (Optional)
API_KEY=your-api-key-here
ALLOWED_ORIGINS=https://yourdomain.com

# File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
MAX_VIDEO_DURATION=300    # 5 minutes in seconds

# Database Connection Pool
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=face_recognition_api.log

# Cleanup Configuration
AUTO_CLEANUP_DAYS=30      # Delete old data after 30 days
CLEANUP_SCHEDULE=daily    # daily, weekly, monthly

# Performance Configuration
FACE_DETECTION_SCALE_FACTOR=1.1
FACE_DETECTION_MIN_NEIGHBORS=3
FACE_DETECTION_MIN_SIZE=30
FACE_DETECTION_MAX_SIZE=300

# Security Features
SECURE_FILE_DELETION=true
INTEGRITY_CHECKING=true
AUDIT_LOGGING=true
